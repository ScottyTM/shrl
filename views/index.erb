<form method="post" action="/" name="form">
	<input type="text" name="url" value="<%= @url %>" placeholder="URL" size="80" id="url">
	<input type="submit" name="submit" value="shrl it!" id="submit">
</form>

<% if @error %>
<p id="error"> Whooops! <%= @error %></p>
<% end %>

<% if @shorturl %>
<p id="result">
	<span id="yourlink">Your shortened link:</span>
	<a href="<%= env['HTTP_REFERER']+@shorturl.shortcode %>">
		<%= env['HTTP_REFERER'] + @shorturl.shortcode %>
	</a>
</p>
<% end %>